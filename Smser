#server
#include <sys/types.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <stdio.h>
#include <stdlib.h>

#define SHMSZ     27

int main()
{
    char c;
    int shmid;
    key_t key;
    char *shm, *s;
    key = 5678;
    shmid = shmget(key, SHMSZ, IPC_CREAT | 0666);

    //Create the segment.
    if (shmid < 0)
    {
        perror("shmget");
        exit(1);
    }

    //Now we attach the segment to our data space.
    shm = shmat(shmid, NULL, 0);
    if (shm == (char *) -1)
    {
        perror("shmat");
        exit(1);
    }

   //Now put some things into the memory for the  other process to read.
     s = shm;

    for (c = 'a'; c <= 'z'; c++)
        *s++ = c;
    *s = NULL;
    while (*shm != '*')
        sleep(1);

    shmdt(shm);
    shmctl(shmid,IPC_RMID,NULL);
    exit(0);
}
//gcc ser.c -o sserver

